<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_note_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sample Title" android:textSize="24sp" android:textStyle="bold"
            android:textColor="@color/common_black"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_note_content" app:layout_constraintStart_toStartOf="@+id/txt_note_title"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_note_title" android:layout_marginTop="24dp"
            tools:text="Sample note content" android:textSize="18sp"/>
    <Button
            android:text="@string/back_button"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:id="@+id/btn_back"
            app:layout_constraintStart_toStartOf="@+id/txt_note_content"
            app:layout_constraintEnd_toEndOf="@+id/txt_note_content" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_note_content"
            android:background="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>